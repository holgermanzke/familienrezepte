= form_for @user do |f|
  - if @user.errors.any?
    - @user.errors.full_messages.each do |msg|
      = flash[:alert] = msg
  %div.flex.flex-col.mx-auto{:class => "w-4/5"}
    = f.text_field :name, placeholder: 'Name des Users', required: true, class:"bg-blue-100 mb-2 border-none rounded-md text-blue-900"
    = f.text_field :email, placeholder: 'E-Mail des Users', required: true, class:"bg-blue-100 mb-2 border-none rounded-md text-blue-900"
    = f.text_field :role, placeholder: 'Rolle des Users', required: true, class:"bg-blue-100 mb-2 border-none rounded-md text-blue-900"
    = f.password_field :password, placeholder: 'Passwort', required: true, class:"bg-blue-100 mb-2 border-none rounded-md text-blue-900"
    = f.password_field :password_confirmation, placeholder: 'Passwort best√§tigen', required: true, class:"bg-blue-100 mb-2 border-none rounded-md text-blue-900"
    = f.submit "User erstellen", class:"bg-blue-900 p-3 text-blue-100 rounded-md w-1/4 self-center hover:bg-blue-700 shadow-lg"